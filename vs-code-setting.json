    "emmet.preferences": { // выводит класс первый а имя отрибута вторым
        "output.reverseAttributes": true
    },
    "update.mode": "none",               // отключить автообновления vscode
    "editor.tabSize": 4,                 // tabs 4
    "editor.insertSpaces": true,         // включает пробелы при нажатие Tab внизу будет написанно Space 4
    "editor.detectIndentation": false,   // отключаем функцию угадывание отступов во всех документов, применяется tab 4
    "vim.leader": "<space>",
    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    // СВОИМИ СИЛАМИ
    // 1. extension.vim_ctrl+c   --> keyboard(shortcuts) переназначить на любую другую комбинацию и унас будет работать ctrl + c в режиме insert 
    // 2. extension.vim_ctrl+b --> keyboard(shortcuts) меняем на любую сложную сочетание чтобы было мало вероятно нажатия на горячии клавиши чтобы панель закрывалась на ctrl+b нормально
    // 3. extension.vim_ctrl=x --> тагже пишем не реальную комбинацию чтобы мы случайно не нажали её
    // "vim.easymotionMarkerBackgroundColor": "#fff",
    // 4. editor.action.copyLines --> дублирования строк вверх и вниз ставим например на alt+d, alt+f
    // 5. extension.vim_ctrl+y  --> меняем на чтото другое чтобы унас правально работал redo
    // 6. extension.vim_ctrl+r  --> тагже как и все остальные специально убераем чтобы она не мешала extension.vim_ctrl+z а тут выставляем ctrl + z
    // 7. keyboard shortcuts --> снимаем с клавиш ctrl + 9, ctrl + 0 горячие клавиши и ставим на
    // 7.1   Unfold  --> ctrl + 0, Fold --> ctrl + 9 
    // 7.2  -->   Fold All ==> скрыть всё alt+9, Unfold all развернуть всё ==> alt+0
    // 8.  extension.vim_down, extension.vim_up --> написать что угодно чтобы унас нормально работали стрелки и не открывали свёрнутый код
    // 8.1  extension.vim_left и extention.vim_right
    "vim.useSystemClipboard": true,
