{
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true, 
    "editor.fontSize": 12,
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Ayu Dark Bordered",
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "scss.hover.references": false,
    "less.hover.references": false,
    "css.hover.references": false,
    "html.hover.references": true,
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // My config
    "update.mode": "none",               // отключить автообновления vscode
    "editor.tabSize": 4,                 // tabs 4
    "editor.insertSpaces": true,         // включает пробелы при нажатие Tab внизу будет написанно Space 4
    "editor.detectIndentation": false,   // отключаем функцию угадывание отступов во всех документов, применяется tab 4
    "vim.leader": "<space>",
    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    // 1. extension.vim_ctrl+c   --> keyboard(shortcuts) переназначить на любую другую комбинацию и унас будет работать ctrl + c в режиме insert 
    // 2. extension.vim_ctrl+b --> keyboard(shortcuts) меняем на любую сложную сочетание чтобы было мало вероятно нажатия на горячии клавиши чтобы панель закрывалась на ctrl+b нормально
    // "vim.easymotionMarkerBackgroundColor": "#fff",
    "vim.useSystemClipboard": true,
    //"vim.langmap": "ФИСВУАПРШОЛДЬТЩЗЙКЫЕГМЦЧНЯ;ABCDEFGHIJKLMNOPQRSTUVWXYZ,фисвуапршолдьтщзйкыегмцчня;abcdefghijklmnopqrstuvwxyz", -- более новая версия поддерживает
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["о", "о"],
            "after": ["<Esc>"]
        }, 
